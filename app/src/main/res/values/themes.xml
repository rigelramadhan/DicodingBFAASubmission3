<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingBFAASubmission" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark</item>
        <!-- Customize your theme here. -->

    </style>
    
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_dark</item>
    </style>

    <style name="Font">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Font styles  -->
    <style name="Font.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="Font.Header.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Font.Header.Medium.Blue">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="Font.Header.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Header.Blue">
        <item name="android:textColor">@color/blue_dark</item>
    </style>

    <style name="Font.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Font.Body.White">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Body.Medium">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Font.Body.Medium.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Body.Light">
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="Font.Captions">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darkest_gray</item>
    </style>

    <style name="Font.Captions.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Font.Captions.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Font.Small">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>
</resources>