<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="14dp"
    android:paddingTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@tools:sample/avatars"
            android:contentDescription="@string/img_desc_avatar" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name"
        style="@style/Font.Header.Blue"
        android:layout_toEndOf="@+id/card_avatar"
        android:layout_marginTop="8dp"
        android:text="@string/user_name"
        />

    <TextView
        android:id="@+id/tv_username"
        style="@style/Font.Captions"
        android:layout_toEndOf="@+id/card_avatar"
        android:layout_below="@+id/tv_name"
        android:text="@string/user_username"
        />

    <View
        android:layout_below="@id/card_avatar"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="12dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>
</RelativeLayout>